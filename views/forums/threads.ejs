<span class="h1"><a href="/Forums">Forums</a> > <%= parent %></span>
<% var parentForum = _.last(forums); %>
<section class="row text-center">
	<h1><%= parentForum.title %></h1>
	<h3><%= parentForum.description %></h3>
</section>

<% for(var i = 0; i < forums.length - 1; i++){ %>
	<section class="row text-center">
		<header class="title"><span class="h3"><a href="/Forums/<%= forums[i].title %>"><%= forums[i].title %></a></span><%= forums[i].createdAt %></header>
		<article class="description"><%= forums[i].description %></article>
		<footer class="info">
			<div class="createdby">
				<%= forums[i].createdBy.accountType %> 
				<%= forums[i].createdBy.username %>
			</div>
		</footer>
	</section>
<% } %>